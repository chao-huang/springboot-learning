package com.sun.amr.service;

import java.util.List;

import com.sun.amr.vo.Dept;

public interface IDeptService {
	/**
	 * 查询所有部门的信息，调用dao层的findAll()方法
	 * 
	 * @param eid
	 *            当前雇员的编号，用作权限的验证
	 * @return
	 * @throws Exception
	 */
	public List<Dept> list(Integer eid) throws Exception;
	/**
	 * 修改部门的名称
	 * @param eid 修改人的编号，进行权限验证
	 * @param dept
	 * @return
	 * @throws Exception
	 */
	public boolean edit(Integer eid,Dept dept)throws Exception; 
}
