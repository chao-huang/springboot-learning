<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.sun.dao.IItemDAO"><!-- 在此定义命名空间 -->
  <resultMap type="Item" id="ItemMap">
  	<id property="iid" column="iid"/>
  	<result property="title" column="title"/>
  	 <result property="content" column="content"/>
  </resultMap>
<!--  查询所有的意见类别信息 -->
<select id="findAll" resultMap="ItemMap">
	SELECT iid,title,content FROM item;
</select>
<!-- 查询所有的数据量 -->
<!--  统计数量 -->
 <select id="getAllCount" resultType="Integer">
 	SELECT COUNT(*) FROM item;
 </select>
 <select id="findById" parameterType="Integer" resultMap="ItemMap">
 	select iid,title,content from item where iid=#{iid}
 </select>
</mapper>